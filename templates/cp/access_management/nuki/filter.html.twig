<div class="card">
    {% set query_params = app.request.query.all['nuki_filter'] is defined ? true : false %}

    <div class="card-header bg-primary cursor-pointer {{ not query_params ? "collapsed" : "" }}" id="filter_header"  data-bs-toggle="collapse" data-bs-target="#collapseFilter" aria-expanded="true" aria-controls="collapseFilter">
        <h6 class="card-title text-white mb-0">Filter</h6>
    </div>

    <div id="collapseFilter" class="collapse {% if query_params is defined and query_params %} show {% endif %} ">
        <div class="card-body p-2">
            {{ form_start(nukiFilterForm) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(nukiFilterForm.name) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(nukiFilterForm.user) }}
                </div>

                <div class="offset-lg-8 col-md-2">
                    <button class="btn btn-primary w-100" type="submit">Filter</button>
                </div>
                <div class="col-md-2">
                    <a href="{{ path('cp_access_management_nukis') }}" class="btn btn-light w-100">Clear</a>
                </div>
            </div>
            {{ form_end(nukiFilterForm) }}
        </div>
    </div>
</div>

