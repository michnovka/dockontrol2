<div class="card border-0 shadow-none">
    {{ form_start(form) }}
    <div class="card-body p-2">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.namePretty) }}
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100">{{ show_submit_label|default('Create Permission') }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

