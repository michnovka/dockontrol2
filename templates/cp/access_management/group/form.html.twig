<div class="card border-0 shadow-none">
    {{ form_start(form) }}
    <div class="card-body p-2">
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.permissions) }}
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100">{{ submit_button_label|default('Create Group') }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
