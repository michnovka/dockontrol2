{% extends 'cp/admin_base.html.twig' %}

{% block title %}E-mail Change Logs | Logs{% endblock %}
{% set active = 'email_change_logs' %}
{% set breadcrumbs = [
    {
        'title': 'Logs', 'link': path('cp_logs')
    },
    {
        'title': 'E-mail Change Logs'
    }
] %}

{% block content %}
    <div class="card mt-3 mb-2">
        <div class="table-responsive rounded">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(emailChangeLogs, 'ID', 'ecl.id') }}</th>
                    <th>{{ knp_pagination_sortable(emailChangeLogs, 'Time', 'ecl.timeCreated') }}</th>
                    <th>User</th>
                    <th>Old E-mail</th>
                    <th>New E-mail</th>
                    <th>Old E-mail Confirm Time</th>
                    <th>New E-mail Confirm Time</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody class="table-group-divider">
                {% for emailChangeLog in emailChangeLogs %}
                    {% include 'cp/logs/email_change_log/row.html.twig' %}
                {% else %}
                    <tr>
                        <td colspan="8">No records found.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
