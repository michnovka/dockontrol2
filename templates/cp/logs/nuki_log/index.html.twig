{% extends 'cp/admin_base.html.twig' %}

{% block title %}Nuki Logs | Logs{% endblock %}
{% set active = 'nuki_logs' %}
{% set breadcrumbs = [
    {
        'title': 'Logs', 'link': path('cp_logs')
    },
    {
        'title': 'Nuki Logs'
    }
] %}

{% block content %}
    {% include 'cp/logs/nuki_log/filter.html.twig' %}
    <div class="card mt-3 mb-2">
        <div class="table-responsive rounded">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(nukiLogs, 'ID', 'nl.id') }}</th>
                    <th>{{ knp_pagination_sortable(nukiLogs, 'Time', 'nl.time') }}</th>
                    <th>User</th>
                    <th>Nuki Name</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody class="table-group-divider">
                {% for nukiLog in nukiLogs %}
                    {% include 'cp/logs/nuki_log/row.html.twig' %}
                {% else %}
                    <tr>
                        <td colspan="6">No records found.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {{ include('paginator/pagination_card_footer.html.twig', {'knp_result_set': nukiLogs}) }}

    </div>
{% endblock %}
