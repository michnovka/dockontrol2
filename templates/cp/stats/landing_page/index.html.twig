{% extends 'cp/admin_base.html.twig' %}

{% block title %}Stats{% endblock %}
{% set active = 'queue' %}
{% set breadcrumbs = [
    {
        'title': 'Stats',
    }
] %}

{% block content %}
    <div class="row">
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 d-flex mt-3">
                <div class="card">
                    <div class="card-header bg-transparent d-flex justify-content-between align-items-center py-3 px-3">
                        <h6 class="mb-0">Queue Statistics</h6>
                        <a href="{{ path('cp_stats_queue') }}" class="btn btn-link text-decoration-none show-underline-hover text-primary p-0">Take me to Queue Statistics</a>
                    </div>
                    <div class="card-body p-3">
                        <p class="text-muted">
                            Track queued, completed, and failed actions in one central view. Actions from the public zone are automatically added to the queue, providing real-time insights into task progress and helping identify bottlenecks quickly.
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="col-xl-3 col-lg-4 col-md-6 d-flex mt-3">
            <div class="card">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center py-3 px-3">
                    <h6 class="mb-0">Usage Statistics</h6>
                    <a href="{{ path('cp_stats_usage') }}" class="btn btn-link text-decoration-none show-underline-hover text-primary p-0">Take me to Usage Statistics</a>
                </div>
                <div class="card-body p-3">
                    <p class="text-muted">
                        View detailed statistics on user activity from the past three months, showing action counts and top users. Monitor activity across zones to spot trends and high engagement areas, helping optimize system performance and resource allocation.
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
