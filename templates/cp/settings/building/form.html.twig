<div class="card border-0 shadow-none">
    {{ form_start(form) }}
    <div class="card-body p-2">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.defaultGroup) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.permissions) }}
            </div>
            <div class="col-md-2 text-start">
                <button class="btn btn-primary w-100">{{ show_submit_label|default('Create Building') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% if building is defined and building is not null %}
    {% include 'cp/settings/car_enter_detail/car_enter_details_list.html.twig' with {
        'carEnterDetails': carEnterDetails,
        'csrfToken': csrf_token('carenterdetailscsrf'),
        'saveCarEnterDetailURL': path('cp_settings_building_add_car_enter_detail', {'building': building.id, 'action': '__ACTION__'})
    } %}
{% endif %}

