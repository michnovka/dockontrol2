<div class="card border-0 shadow-none">
    <div class="card-body">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-3">
                {{ form_row(form.host) }}
            </div>
            <div class="col-lg-3">
                {{ form_row(form.port) }}
            </div>

            <div class="col-lg-3">
                {{ form_row(form.sendersEmail) }}
            </div>
            <div class="col-lg-3">
                {{ form_row(form.login) }}
            </div>
            <div class="col-lg-3">
                {{ form_row(form.password) }}
            </div>
            <div class="col-lg-3">
                {{ form_row(form.useTls) }}
            </div>
            <div class="col-lg-3">
                {{ form_row(form.ignoreSSLError) }}
            </div>
            <div class="col-lg-3"></div>
            <div class="col-lg-2">
                <button class="btn btn-primary w-100" >{{ submit_button_label|default('Submit') }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>