{% extends "email/email_base.html.twig" %}

{% block title %}Reset Password | DOCKontrol{% endblock %}
{% block header %}Password Reset Request{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <style>
        a.reset-password-btn {
            display: inline-block;
            background-color: #007bff !important;
            color: #ffffff !important;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            margin-top: 10px;
            font-size: 16px;
        }
        .footer a {
            color: #007bff !important;
        }
    </style>
{% endblock %}

{% block content %}
    <h2>Hello {{ user.name }},</h2>
    <p>We received a request to reset the password for your account. If this was you, please click the button below to reset your password.</p>

    <p>If you did not request a password reset, please ignore this e-mail or contact support if you have concerns.</p>

    <div class="button-container">
        <a href="{{ url('dockontrol_reset_password', {token: token}) }}" class="reset-password-btn" target="_blank">Reset Password</a>
    </div>

    <p>This password reset link will expire in 24 hours.</p>
    <p>Additional details:</p>
    <ul>
        <li>IP Address: {{ ipAddress }}</li>
        <li>Browser: {{ browserInfo }}</li>
        <li>Requested Time: {{ requestedTime }}</li>
    </ul>
{% endblock %}
